# Base image
FROM ubuntu:18.04

# Install.
RUN \
  rm /etc/dpkg/dpkg.cfg.d/excludes && \
  apt-get update && \
  apt install -y net-tools curl iproute2 inetutils-ping openssh-client telnet lsof tree dnsutils htop ncdu && \
  apt-get clean && \
  apt-get autoclean && \
  rm -rf /var/lib/apt/lists/*

# Add files.
#ADD .bashrc /root/.bashrc

# Define working directory.
WORKDIR /root

# 容器默认启动命令
ENTRYPOINT ["bash"]
